{
    "clangd.fallbackFlags": ["-std=c++11"],
    "clangd.disableDiagnostics" : true,
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "trace.server": "verbose",
            "filetypes": ["go"],
            "initializationOptions": {
                "usePlaceholders": true
            }
        }
    }
}
